    <!--async append log-->
    <appender name="asynAppender" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="time-rolling"/>
    </appender>

    <root>
        <appender-ref ref="asynAppender"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </root>
